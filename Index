    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const brilliantBluesPalette = ['#003F5C', '#366E8A', '#7CB5D3', '#C1E1F4'];

            const defaultTooltipConfig = {
                plugins: {
                    tooltip: {
                        callbacks: {
                            title: function(tooltipItems) {
                                const item = tooltipItems[0];
                                let label = item.chart.data.labels[item.dataIndex];
                                if (Array.isArray(label)) {
                                  return label.join(' ');
                                } else {
                                  return label;
                                }
                            }
                        }
                    }
                }
            };
            
            function wrapLabels(label, maxLength = 16) {
                if (typeof label !== 'string' || label.length <= maxLength) {
                    return label;
                }
                const words = label.split(' ');
                const lines = [];
                let currentLine = '';
                words.forEach(word => {
                    if ((currentLine + word).length > maxLength) {
                        lines.push(currentLine.trim());
                        currentLine = '';
                    }
                    currentLine += word + ' ';
                });
                lines.push(currentLine.trim());
                return lines;
            }

            const ctxDistribuicao = document.getElementById('distribuicaoPortosChart').getContext('2d');
            new Chart(ctxDistribuicao, {
                type: 'doughnut',
                data: {
                    labels: ['Regi√µes Sul e Sudeste', 'Outras Regi√µes'],
                    datasets: [{
                        label: 'Distribui√ß√£o de Portos',
                        data: [21, 43 - 21],
                        backgroundColor: [brilliantBluesPalette[0], brilliantBluesPalette[2]],
                        borderColor: '#F0F8FF',
                        borderWidth: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        ...defaultTooltipConfig.plugins,
                        legend: {
                            position: 'bottom',
                        },
                        title: {
                            display: false
                        }
                    }
                }
            });

            const ctxPortosEstado = document.getElementById('portosPorEstadoChart').getContext('2d');
            new Chart(ctxPortosEstado, {
                type: 'bar',
                data: {
                    labels: ['Rio de Janeiro', 'Esp√≠rito Santo', 'Santa Catarina', 'Rio Grande do Sul', 'S√£o Paulo', 'Paran√°'],
                    datasets: [{
                        label: 'N¬∫ de Portos por Estado (Sul/Sudeste)',
                        data: [7, 6, 4, 2, 2, 1],
                        backgroundColor: brilliantBluesPalette[1],
                        borderColor: brilliantBluesPalette[0],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    indexAxis: 'y',
                    scales: {
                        x: {
                            beginAtZero: true
                        }
                    },
                    plugins: {
                        ...defaultTooltipConfig.plugins,
                        legend: {
                            display: false,
                        },
                        title: {
                            display: true,
                            text: 'N¬∫ de Portos por Estado',
                            padding: {
                                bottom: 10
                            }
                        }
                    }
                }
            });

            const ctxHorasCurso = document.getElementById('horasCursoChart').getContext('2d');
            const originalLabels = ['Carga Hor√°ria Te√≥rica', 'Pr√°tica Profissional Supervisionada', 'Atividades Acad√™mico Cient√≠fico Culturais'];
            const wrappedLabels = originalLabels.map(label => wrapLabels(label));

            new Chart(ctxHorasCurso, {
                type: 'pie',
                data: {
                    labels: wrappedLabels,
                    datasets: [{
                        label: 'Distribui√ß√£o da Carga Hor√°ria (horas)',
                        data: [2000, 200, 200],
                        backgroundColor: [brilliantBluesPalette[0], brilliantBluesPalette[1], brilliantBluesPalette[2]],
                        borderColor: '#FFFFFF',
                        borderWidth: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        ...defaultTooltipConfig.plugins,
                        legend: {
                            position: 'bottom',
                        },
                        title: {
                            display: true,
                            text: 'Carga Hor√°ria Total: 2400h',
                            font: {
                                size: 16
                            },
                            padding: {
                                top: 10,
                                bottom: 20
                            }
                        }
                    }
                }
            });
        });
    </script>
